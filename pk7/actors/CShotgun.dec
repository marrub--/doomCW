actor CShotgunToSil : Weapon
{
	+WEAPON.CHEATNOTWEAPON
	Tag "$CW_PISTOL_WTAG"
	States
	{
	Select:
		TNT1 A 0 A_GiveInventory("DNS",1)
		TNT1 AAAAA 0 A_Raise
		TNT1 A 1 A_Raise
		loop
	Deselect:
		TNT1 A 0
		stop
	Ready:
		TNT1 A 0 A_TakeInventory("CShotgun")
		TNT1 A 5 A_PlaySound("weapons/shogupg",1)
		TNT1 A 20
		TNT1 A 0 A_GiveInventory("CShotgunSil")
		TNT1 A 0 A_SelectWeapon("CShotgunSil")
		TNT1 A 0 A_TakeInventory("CShotgunToSil")
		stop
	Fire:
		TNT1 A 0 A_Jump(257,"Ready")
		goto Ready
	}
}

actor CShotgunToNorm : CShotgunToSil
{
	Tag "$CW_SPISTL_WTAG"
	States
	{
	Ready:
		TNT1 A 0 A_TakeInventory("CShotgunSil")
		TNT1 A 5 A_PlaySound("weapons/shogupg",1)
		TNT1 A 10
		TNT1 A 0 A_GiveInventory("CShotgun")
		TNT1 A 0 A_SelectWeapon("CShotgun")
		TNT1 A 0 A_TakeInventory("CShotgunToNorm")
		stop
	}
}