actor CShotgun : CWeapon replaces Shotgun
{
	Weapon.SlotNumber 3
	Weapon.AmmoType1 "Shell"
	AttackSound "weapons/shotty"
	Obituary "$CW_SHTGUN_OBIT"
	Tag "$CW_SHTGUN_WTAG"
	States
	{
	// Select //
	Select:
		TNT1 A 0 A_GiveInventory("DNS",1)
		SHTG A 1 A_Raise
		wait
	Deselect:
		TNT1 A 0 A_GiveInventory("DNS",1)
		SHTG A 1 A_Lower
		wait
	
	// Ready //
	Ready:
		TNT1 A 0 A_TakeInventory("DNS",1)
		SHTG A 1 A_WeaponReady(WRF_ALLOWZOOM)
		loop
	
	// Fire //
	Fire:
		SHTG A 9 A_SetTics(CallACS("CW_GETVAL",GV_PSTF1))
		TNT1 A 0 A_AlertMonsters
		TNT1 A 0 A_GunFlash
		SHTG A 5 BRIGHT A_FireBullets(7,0,12,2,"BulletPuff")
		SHTG B 5
		SHTG C 5 A_PlaySound("weapons/shogupg",5)
		SHTG DCB 5
		SHTG A 6 A_Refire
		goto Ready
	
	Flash:
		SHTF A 2 A_Light2
		SHTF B 2 A_Light1
		goto LightDone
	}
}

