#include "CWThings.dh"
#include "CWGlobals.dh"

script int CW_GETVAL(int arg1)
{
	switch(arg1)
	{
	case GV_PSTF1:
		return 4-FireSpeedMod.vPistol;
	break;
	case GV_PSTF2:
		return 5-AccuracyMod.vPistol;
	break;
	case GV_SHTF1:
		return 3-FireSpeedMod.vShotgun;
	break;
	case GV_SHTP1:
		return 5-AltSpeedMod.vShotgun;
	break;
	};
	
	return 0;
};

